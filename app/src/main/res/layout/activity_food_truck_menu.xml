<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodTruckMenuActivity">

    <ImageButton
        android:id="@+id/backImageButton"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginEnd="354dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/image_back_arrow"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/fixedMenuTextView"
        android:layout_width="186dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:hint="Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/truckNameTextView" />

    <TextView
        android:id="@+id/truckNameTextView"
        android:layout_width="317dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        android:hint="Name of the food truck"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/truckMenuTextView"
        android:layout_width="331dp"
        android:layout_height="408dp"
        android:layout_marginTop="16dp"
        android:hint="The menu here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixedMenuTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>